# Keycloak Configuration
# Copy this file to .env and modify values as needed

# Keycloak Admin User
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin!34

# MariaDB Database Configuration
MYSQL_ROOT_PASSWORD=admin!34
MYSQL_DATABASE=keycloak
MYSQL_USER=admin
MYSQL_PASSWORD=admin!34

# Keycloak Database Connection
KC_DB_URL=jdbc:mysql://mariadb:3306/keycloak
KC_DB_USERNAME=admin
KC_DB_PASSWORD=admin!34

# Keycloak Server Configuration
KC_HOSTNAME=localhost
KC_HOSTNAME_PORT=18200
KC_HTTP_ENABLED=true
KC_HTTP_PORT=8080

# Custom Ports (Host:Container)
KEYCLOAK_PORT=18200
MARIADB_PORT=18300

# Optional: SSL/TLS Configuration (for production)
# KC_HTTPS_CERTIFICATE_FILE=/opt/keycloak/conf/server.crt.pem
# KC_HTTPS_CERTIFICATE_KEY_FILE=/opt/keycloak/conf/server.key.pem

# Optional: Proxy Configuration (if behind reverse proxy)
# KC_PROXY=edge
# KC_PROXY_HEADERS=forwarded|xforwarded

# Logging Configuration
KC_LOG_LEVEL=INFO

# Features Configuration
KC_HEALTH_ENABLED=true
KC_METRICS_ENABLED=true

# Performance Tuning (adjust based on your needs)
KC_CACHE=ispn
KC_CACHE_STACK=tcp

# Development vs Production Mode
# For development: KC_START_MODE=dev
# For production: KC_START_MODE=prod
KC_START_MODE=dev